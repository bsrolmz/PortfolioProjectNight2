@model List<PortfolioProjectNight.Models.About>
@foreach (var item in Model)
{
<div class="container-fluid" id="pigraAbout">
    <div class="container">
        <div class="row g-0">
            <div class="col-12 col-lg-3">
                <div class="about-header bg-dark h-100 pt-6 pe-6 pb-6">
                    <div class="text-start d-flex flex-column justify-content-center wow fadeInUp" data-wow-delay="0.1s">
                        <p class="text-white sub-title">Hakkımda</p>
                        <h1 class="display-6 text-white mb-0">M&Y Yazılım Eğitim Akademi Danışmanlık </h1>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-9">
                <div class="about-content h-100 pt-6 ps-6 pb-6">
                    <div class="row g-5">
                        <div class="col-xl-5">
                            <div class="about-img bg-light p-4 wow fadeInUp" data-wow-delay="0.1s">
                                <img src="~/Content/Pigra-1.0.0/img/personal-portfolio-website-template.jpg" class="img-fluid w-100" alt="Image">
                                <div class="sosial-icon">
                                    <a class="btn btn-primary btn-sm-square mb-3" href="https://www.facebook.com/login/?next=https%3A%2F%2Fwww.facebook.com%2F%3Flocale%3Dtr_TR"><i class="fab fa-facebook-f text-white"></i></a>
                                    <a class="btn btn-primary btn-sm-square mb-3" href="https://x.com/?lang=tr"><i class="fab fa-twitter text-white"></i></a>
                                    <a class="btn btn-primary btn-sm-square mb-3" href="https://www.instagram.com/"><i class="fab fa-instagram text-white"></i></a>
                                    <a class="btn btn-primary btn-sm-square mb-0" href="https://www.linkedin.com/home"><i class="fab fa-linkedin-in text-white"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-7 wow fadeInUp" data-wow-delay="0.3s">
                            <h4 class="mb-4">@item.Title</h4>
                            <p class="mb-4">
                                @item.Description
                            </p>
                          
                            <a href="#" class="btn btn-primary py-2 px-4"> <i class="fas fa-download me-2"></i>CV'mi İndir</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}