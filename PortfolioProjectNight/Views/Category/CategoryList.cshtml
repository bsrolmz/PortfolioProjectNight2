@model List<PortfolioProjectNight.Models.Category>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<a href="/Message/Inbox/" class="btn btn-dark">Mesajlara Dön</a>
<div class="container">
    <br />
    <br />
    <table class="table table-bordered">
        <tr>
            <th>Katedori ID</th>
            <th>Katedori Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-primary">Güncelle</a></td>
                <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>
</div>

<a href="/Category/CreateCategory/" class="btn btn-success">Kategoriyi Ekle</a>