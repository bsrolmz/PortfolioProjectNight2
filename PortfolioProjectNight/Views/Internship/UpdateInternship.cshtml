@model PortfolioProjectNight.Models.Internship
@{
    ViewBag.Title = "UpdateInternship";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Staj Bilgisi Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.InternshipId)
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Alt Başlık</label>
    @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Hakkımda Bilgisini Güncelle</button>
</form>


