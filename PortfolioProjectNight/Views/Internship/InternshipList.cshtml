@model List<PortfolioProjectNight.Models.Internship>
@{
    ViewBag.Title = "InternshipList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Stajlarım</h2>


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InternshipId</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td><a href="/Internship/DeleteInternship/@item.InternshipId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Internship/UpdateInternship/@item.InternshipId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Internship/CreateInternship/" class="btn btn-success">Yeni Staj Bilgisi Ekle</a>
